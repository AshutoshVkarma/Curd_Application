@model Curd_Application.Models.Customer
@{
    Layout = null;
}

@using (Html.BeginForm("AddCustomers", "Home", FormMethod.Post, new {onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.id)
    <div class="form-group">
        @Html.LabelFor(model => model.name, new { @class = "Control-label" })
        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.email, new { @class = "Control-label" })
        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.mobile, new { @class = "Control-label" })
        @Html.EditorFor(model => model.mobile, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.gender, new { @class = "Control-label" })
        @Html.EditorFor(model => model.gender, new { htmlAttributes = new { @class = "form-control" } })
    </div >
    <div class="form-group">
        <input type="submit" value="submit" class="btn btn-primary" />
    </div>
}
